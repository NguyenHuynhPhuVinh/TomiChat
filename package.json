{
  "name": "tomisakae",
  "displayName": "TomiChat",
  "description": "ChatBot tạo truyện!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tomisakae.helloWorld",
        "title": "Hello World"
      }
    ],
    "views": {
      "tomisakae-sidebar": [
        {
          "id": "tomisakae.chatbotView",
          "name": "TomiChat",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tomisakae-sidebar",
          "title": "TomiChat",
          "icon": "$(comment-discussion)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && npm run build:css && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch:css": "postcss src/webview/assets/css/main.css -o dist/main.css --watch",
    "build:css": "postcss src/webview/assets/css/main.css -o dist/main.css",
    "package": "npm run check-types && npm run lint && npm run build:css && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "tailwindcss": "^4.1.8"
  }
}
